// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic {
  id           String   @id @default(uuid())
  title        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastAccessed DateTime @default(now())
  FileUpload   FileUpload[]
  Notes        Notes[]
  Links        Links[]
  parentId     String?  @map("parent_id") 
  parent       Topic?   @relation("TopicToTopic", fields: [parentId], references: [id]) 
  children     Topic[]  @relation("TopicToTopic") 
}

model FileUpload {
  id          String   @id @default(uuid())
  title       String
  filename    String   // Added field for filename
  mimeType    String   // Added field for MIME type
  size        Int      // Added field for file size
  data        Bytes    // Added field for binary data
  createdAt   DateTime @default(now())
  topicId     String   @map("topic_id") // Foreign key referencing the Topic model
  topic       Topic    @relation(fields: [topicId], references: [id])
}

model Notes {
  id      String @id @default(uuid())
  title   String
  content    String
  topicId String @map("topic_id") // Foreign key referencing the Topic model
  topic   Topic  @relation(fields: [topicId], references: [id])
}

model Links {
  id         String   @id @default(uuid())
  title      String
  url        String
  desc       String
  topicId String @map("topic_id") // Foreign key referencing the Topic model
  topic   Topic  @relation(fields: [topicId], references: [id])
}
